REJECTION NEW REJECTION METHOD WITH FUNCTION /////////////////////////////////////////////
Implement as in: /home/tamara/Documents/MATLAB/VSDI/TORus/devo_bradi_ibis_grouped_by_condition_new.m

% @ REJECT SETTINGS (in heading)
    reject_on= 3;

    setting.manual_reject = 0; %
    setting.GSmethod_reject = 0;  %
    setting.GSabsthres_reject = 0; %
    setting.forcein = 0; %
    setting.bradyvisual = 1;

% APPLY FUNCTION (once the fish has been selected)
    reject_idx  = compute_rejectidx(VSDI, reject_on, setting);

% ...run only if we want to limit the trial selection to certain conditions
    ci = 0;
    seltrials = [];
    for condi = cond_codes
        ci = ci+1;
        seltrials = [seltrials; find(VSDI.condition(:,1) == condi)];
    end

% COMPUTE REJECTION (in code)
    seltrials = sort(seltrials);
    if reject_on>0
        seltrials = setdiff(seltrials, reject_idx);
    end




surf(xlim, ylim, plane_z*ones(2), 'FaceColor','b', 'FaceAlpha',0.5)             % Plot Plane At 'plane_z'
hold off
xlabel('X \rightarrow', 'Rotation',20)
ylabel('\leftarrow Y', 'Rotation',-25)
zlabel('Z \rightarrow')
